<Window x:Class="demo.ReCaptcha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demo"
        mc:Ignorable="d"
        Title="ReCaptcha" Height="230" Width="400" Closing="Window_Closing">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label x:Name="CaptchaLabel" Width="150" Height="75" FontSize="25" FontWeight="Bold" Background="DarkGreen" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="Green"></Label>
            <TextBox Margin="0,10,0,0" x:Name="EnteredCaptcha" Width="150" Height="30" FontSize="20" VerticalContentAlignment="Center"/>
            <Button x:Name="Btn" Click="Btn_Click"  Content="Принять" Margin="0,10,0,0" FontSize="15"/>
        </StackPanel>
    </Grid>
</Window>
